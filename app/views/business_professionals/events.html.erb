<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Location</th>
      <th>Time</th>
      <th>Description</th>
      <th>Event Type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    
  </thead>

  <tbody>

<h1>Events</h1>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime('%B %-d, %Y') %></td>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.start_time.strftime('%H:%M %p')%> - <%=event.finish_time.strftime('%H:%M %p') %></td>
        <td><%= event.description %></td>
        <td><%= event.event_type %></td>  
        <% @event_business_professional = EventBusinessProfessional.find_by(organization_id: @business_professional.id, event_id: event.id) %>
        <% if @event_business_professional %>
            <td>Registered</td>
            <td><%= link_to 'Unregister', unregister_event_business_professional_path(bid: @business_professional.id, eid: event.id), data: { confirm: 'Are you sure?' }, class: "registration-button" %></td>
        <% else %>
            <td>Not registered</td>
            <td><%= link_to 'Register', register_event_business_professional_path(bid: @business_professional.id, eid: event.id), class: "registration-button" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to dashboard', pages_user_dashboard_path %>
<br>